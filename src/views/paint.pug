extends layouts/base

block content
    #paint
        canvas(id="canvas" height="500" width="1000" style="border: 1px solid #000; display: block; margin: auto;")

    form#paint-properties(onsubmit="return false;")
        fieldset
            legend Propriétés du Paint
        .form-group
            label(for="colorBrush") Couleur du pinceau
            input(type="color" class="form-control" id="colorBrush" name="colorBrush")
        .form-group
            label(for="widthBrush") Taille du pinceau
            input(type="number" class="form-control" min="1" id="widthBrush" name="widthBrush" value="1")

    #chatbox.table
        .table-cell#chat_wrapper
            #chat
        .table-cell#users_wrapper
            #users
                .title En ligne
                ul#users_list
    #sendMessage_wrapper
        form#sendMessage.form-inline(method="post")
            .form-group
                label(for="message")
                input(type="text" class="form-control" name="message" id="message" autocomplete="off")
            button(type="submit" class="btn btn-default") Envoyer

append javascript
    script(type="text/javascript").
        let user = "#{login}"
    script(src="static/js/paint.js")
